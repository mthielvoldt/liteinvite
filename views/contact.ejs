<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="mb-4">Get in touch</h1>
  <%- message %>

  <form class="row flex-column" action="/contact" method="POST">
    <div class="form-group col-lg-4 col-md-6">
      <label for="name">From</label>
      <input type="text" class="form-control" name="from" autofocus>
    </div>

    <div class="form-group col-lg-4 col-md-6">
      <label for="email">Subject</label>
      <input type="text" class="form-control" name="subject">
    </div>

    <div class="form-group col-lg-6 col-md-12">
      <label for="password">How can we help?</label>
      <textarea id="new-pass-2" class="form-control" name="message"></textarea>
    </div>

    <div class="form-group col-12">
      <button id="submit-btn" class="btn btn-primary " type="submit">Send message</button>
    </div>
  </form>


  <%- include('partials/scripts') %>

  <%- include('partials/footer') %>