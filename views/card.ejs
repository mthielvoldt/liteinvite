<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <img src="/images/<%= _id %>" alt="Edit to add an image" width="100%" height="225" >
    
    <div class="card-body">
      <p class="card-text"><%- name || "<em>Untitled</em>" %> </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <a href="/events/<%= _id %>" class="btn btn-sm btn-outline-secondary">View</a>
          <a href="/events/<%= _id %>/edit"  class="btn btn-sm btn-outline-secondary">Edit</a>
        </div>
        <a href="/delete/<%= _id %> " class="btn btn-sm btn-outline-secondary">Delete</a>
      </div>
    </div>
  </div>
</div>

